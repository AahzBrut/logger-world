<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="user_account-01" author="AahzBrut">
        <createSequence sequenceName="user_account_seq" startValue="0"/>
    </changeSet>

    <changeSet id="user_account-02" author="AahzBrut">
        <createTable tableName="user_account">
            <column name="user_account_id" type="TINYINT" defaultValueSequenceNext="user_account_seq">
                <constraints primaryKey="true" primaryKeyName="user_account_pk"/>
            </column>
            <column name="login_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="display_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_status_id" type="TINYINT">
                <constraints nullable="false"/>
            </column>
            <column name="language_id" type="TINYINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_login_at" type="TINYINT" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
