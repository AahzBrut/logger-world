<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="location_type_description-01" author="AahzBrut">
        <createSequence sequenceName="location_type_description_seq"/>
    </changeSet>

    <changeSet id="location_type_description-02" author="AahzBrut">
        <createTable tableName="location_type_description">
            <column name="location_type_description_id" type="INT" defaultValueSequenceNext="location_type_description_seq">
                <constraints primaryKey="true" primaryKeyName="location_type_description_pk"/>
            </column>
            <column name="language_id" type="TINYINT">
                <constraints nullable="false"/>
            </column>
            <column name="location_type_id" type="TINYINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="CLOB">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
